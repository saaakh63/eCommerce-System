@model FinalProject.Models.ProductDto

<body style="background-color:wheat">
    <div class="row">
        <div class="col-md-8 nx-auto rounded border p-3">
            <h2 class="text-center mb-5" style="color:navy; font-size:35px;"><b>Edit Product</b></h2>
            <form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="Edit">
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label" style="color:navy">Id</label>
                    <div class="col-sm-8">
                        <input class="form-control-plaintext" readonly value="@ViewData["ProductId"]" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label" style="color:navy">Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label" style="color:navy">PriceInEGP</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="PriceInEGP" />
                        <span asp-validation-for="PriceInEGP" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label style="  style="color:navy">Description</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label" style="color:navy">Type</label>
                    <div class="col-sm-8">
                        <select class="form-select" asp-for="Type">
                            <option value="Clothes">Clothes</option>
                            <option value="Bags">Bags</option>
                            <option value="Boots">Boots</option>
                            <option value="Accessories">Accessories</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="offset-sm-4 col-sm-8">
                        <img src="/products/@ViewData["Image"]" width="150" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label" style="color:navy">Image</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="ImageFile" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="offset-sm-4 col-sm-r d-grid">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    <div class="col-sm-4 d-grid">
                        <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index" role="button">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>

