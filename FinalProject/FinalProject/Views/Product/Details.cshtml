@model FinalProject.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<body style="background-color:wheat;">
    <h1 style="background-color:wheat; color:navy;margin-top:20px; padding:20px; font-size:35px;"><b>Details of product</b></h1>

    <div style="background-color:wheat; margin-top:0px;padding:20px;">
        <img src="~/products/@Model.Image" alt="@Model.Name" style="max-width:100%;height:auto;" />
    </div>
    <dl class="row mt-4" style="background-color:wheat; padding:20px;color:black; margin-top:100px;">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.PriceInEGP EGP</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>
    </dl>
    <div class="mt-4" style="background-color:wheat; padding:20px;margin-top:0px;">
        <a class="btn btn-primary btn-sm" asp-controller="Product" asp-action="Index" style="background-color:navy">Back to List</a>
        <a class="btn btn-primary btn-sm" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.ProductID" style="background-color:navy">Edit</a>
    </div>
</body>