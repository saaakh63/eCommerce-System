@model IEnumerable<FinalProject.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}
<html>
<head>
   <style>
        .flex-container {
            display: flex;
            flex-wrap: wrap; /* Optional: Allows items to wrap to the next line */
        }

        .flex-item {
            flex: 1 1 30%; /* Adjust the width as needed */
            margin: 10px; /* Optional: Adds space between items */
        }

   </style>
    <title>ChicBoutique</title>
