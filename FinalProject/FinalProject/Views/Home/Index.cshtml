    <body style="background-color:wheat">
    <div class="container" style="display:block;">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" style="margin-top:100px; margin-bottom:40px;">
                @TempData["ErrorMessage"]
            </div>
        }

        <form asp-action="Search" asp-controller="Search" method="post" style="margin-top:30px;">
            <div class="form-group">               
                <input type="text" class="form-control" id="searchTerm" name="searchTerm" placeholder="Search for a product..." />               
            </div>
            <button type="submit" class="btn btn-primary" style="background-color:navy">Search</button>
        </form>
    </div>
    <!-- clothes section start -->
    <div class="fashion_section" >
        <div id="main_slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="container">
                        <h1 class="fashion_taital" style="color:navy">Clothes Section</h1>
                        @if (Model != null)
                        {
                            <div class="flex-container" style="background-color: #333;">
                                @foreach (var product in Model )
                                {
                                    if(@product.Type=="Clothes"){
                                    <div class="fashion_section_2 flex-item">
                                        <div class="box_main">
                                            <h4 class="shirt_text">@product.Name</h4>
                                            <p class="price_text">Price:  <span style="color: #262626;">@product.PriceInEGP</span></p>
                                            <div class="tshirt_img"><img src="/products/@product.Image" width="200%" /></div>
                                            <p class="price_text">Description: <span style="color: #262626;">@product.Description</span></p>
                                            <p class="price_text">Category: <span style="color: #262626;">@product.Type</span></p>
                                            <div class="btn_main">
                                                    <a asp-action="AddToCart" asp-controller="AddToCart" asp-route-id="@product.ProductID" class="btn btn-primary">Add to cart</a>
                                            </div>
                                        </div>
                                    </div>
                                    }
                                }
                            </div>
                        }
                        else
                        {
                            <p>No data available.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>    
            <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="prev">
                <i class="fa fa-angle-left"></i>
            </a>
            <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
                <i class="fa fa-angle-right"></i>
            </a>
        </div>
    </div>
